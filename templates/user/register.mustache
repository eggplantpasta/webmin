<form>
  <h2>New Account</h2>
  <p>Please fill in this form to create an account.</p>
  <fieldset>
    <label>
      User name
      <input name="username" placeholder="mickydee" autocomplete="username" />
    </label>
    <label>
      Email
      <input type="email" name="email" placeholder="mick.d.man@gmail.com" autocomplete="email" />
    </label>
    <label>
      Password
      <input type="password" name="password" placeholder="********" autocomplete="new-password" />
    </label>
  </fieldset>
  <fieldset class="grid">
      <input type="reset" value="Cancel" class="secondary" />
      <input type="submit" value="Create Account" />
  </fieldset>
  <p>Already have an account? <a href="/user/login.php">Login here</a>.</p>
</form>
